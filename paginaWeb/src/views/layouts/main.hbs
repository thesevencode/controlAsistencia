    <script>



        var btn = document.getElementById("btn");


        btn.addEventListener("click", enviar)


        function enviar(e) {


            var code = document.getElementById("code");
            var name = document.getElementById("name");
            var lastName = document.getElementById("lastName");
            var dni = document.getElementById("dni");
            var success = document.getElementById("success")
            var danger = document.getElementById("danger")

            console.log(code.value.length, "codigo")
            console.log(dni.length, "dni")

            if (code.value.length != 8 || code.value.length == 0) {
                danger.setAttribute("style", "display:none");

                danger.setAttribute("style", "display:block");
                danger.innerHTML = "El codigo debe tener 8 digitos y es necesario";

                return false;
            } else if (dni.value.length != 8 || dni.value.length == 0) {
                danger.setAttribute("style", "display:none");

                danger.setAttribute("style", "display:block");
                danger.innerHTML = "El dni debe tener 8 digitos y es necesario";

                return false;
            } else {
                $.ajax({
                    url: 'http://localhost:3000/',
                    type: 'POST',
                    data: {
                        code: code.value,
                        name: name.value,
                        lastName: lastName.value,
                        dni: dni.value
                    },
                    success: function (res) {
                        code.value = '';
                        name.value = '';
                        lastName.value = '';
                        dni.value = '';


                        if (!res.status) {
                            success.setAttribute("style", "display:none")
                            danger.setAttribute("style", "display:none")

                            danger.setAttribute("style", "display:block")
                            danger.innerHTML = res.message
                        } else {
                            danger.setAttribute("style", "display:none")
                            success.setAttribute("style", "display:none")

                            success.setAttribute("style", "display:block")
                            success.innerHTML = res.message
                        }



                        return false;
                    },
                    error: function (es) {

                        return false;
                    }
                });
            }

            return false;
        }
    </script>

